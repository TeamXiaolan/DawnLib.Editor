<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <AssemblyName>com.github.xuuxiaolan.coderebirthlib.editor</AssemblyName>
        <Product>CodeRebirthLib.Editor</Product>
    </PropertyGroup>


    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <RootNamespace>CodeRebirthLib.Editor</RootNamespace>
        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
    </PropertyGroup>
    
    <ItemGroup>
      <PackageReference Include="XuXiaolan.CodeRebirthLib" Version="0.9.0" PrivateAssets="all" />
      <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
      <Reference Include="UnityEditor" PrivateAssets="all">
        <HintPath>$(UnityEditorPath)Editor\Data\Managed\UnityEngine\UnityEditor.dll</HintPath>
      </Reference>
      <Reference Include="UnityEditor.CoreModule" PrivateAssets="all">
        <HintPath>$(UnityEditorPath)Editor\Data\Managed\UnityEngine\UnityEditor.CoreModule.dll</HintPath>
      </Reference>
      <PackageReference Include="UnityEngine.Modules" Version="2022.3.9" IncludeAssets="compile" PrivateAssets="all"/>
    </ItemGroup>
    
    <ItemGroup>
      <Folder Include="deps\" />
    </ItemGroup>
</Project>
